Page {
  background: #000;
}

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.gif {
  width: 750rpx;
  height: 1000rpx;
}

.buttons {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.flexContainer {
  display: flex;
  width: 672rpx;
  justify-content: space-between;
  margin: auto;
}
.saveImg {
  width: 224rpx;
  height: 64rpx;
}
.backToCamera {
  width: 164rpx;
  height: 64rpx;
}

.shareButton {
  position: relative;
}
.shareButton image,
.shareButton button {
  width: 424rpx;
  height: 124rpx;
}
.shareButton image {
  display: block;
  margin: auto;
  margin-top: 129rpx;
}
.shareButton button {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  top: 0;
  opacity: 0;
}

.backToHome {
  width: 424rpx;
  height: 124rpx;
  display: block;
  margin: auto;
  margin-top: 129rpx;
}
